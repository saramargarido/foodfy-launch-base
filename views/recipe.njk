{% extends "layout.njk" %}

{% block head %}
<title>Foodfy - Receitas</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
rel="stylesheet">
<link rel="stylesheet" href="/recipes.css">
{% endblock head %}

{% block content %}
<section class="views">
    
<div class="card">
        

<img src="{{item.image}}" alt="">
<h3>{{item.title}}</h3>
<p>{{item.author}}</p>

<h4>Ingredientes</h4> <small>Esconder</small>

<ul>

{% for ingredient in item.ingredients %}
<li>
    {{ingredient}}
</li>
{% endfor %}


</ul>
<h4>Modo de preparo</h4> <small>Esconder</small>
<p>{{item.preparation}}</p>

</div>

    <script src="scripts.js"></script>

</section>
{% endblock content %}


