{% extends "admin/layout.njk" %}

{% block content %}

<section class="views">
    <h2>Gerenciar receitas</h2>
    
    <div class="cards">
        {% for item in items %}
        <div class="card">
            <div class="card-image">

            <img src="{{item.image}}" alt ="{{item.title}}">
            </div>
            <div class="card-body">

            <h3>{{item.title}}</h3>
            <p>por {{item.author}}</p>
            <a  href="/admin/recipes/{{ item.id }}">Visualizar</a>
            </div>
        </div>
        {% endfor %}
    </div>

</section>
{% endblock content %}

